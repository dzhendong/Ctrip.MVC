@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    <link href="~/Content/css/base.css" rel="stylesheet" />
    <link href="~/Content/bootstrap1/bootstrap.min.css" rel="stylesheet" />

    <script src="@Url.Content("~/Content/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Scripts/jquery-migrate-1.2.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/bootstrap2/bootstrap.min.js")" type="text/javascript"></script>

    <script type="text/javascript">
        function addImageSave() {
            $("#imgForm").submit();
        }
        function createImageListAdd() {
            document.getElementById("imgForm").reset();
            document.getElementById("tbAddUrl2").value = ""
            document.getElementById("tbAddTitle").value = "";
            document.getElementById("tbAddNote").value = "";
            document.getElementById("chkAddSort").checked = false;
        };
        function addImageSave() {
            $("#imgForm").submit();
        }
        function addImageSaveComplete() {

        }

        function a() {
            var msg = $('#msg');
            msg.append(a1());          
        }
       function a1() {
            var html
            = '<div id="pass" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="pass" aria-hidden="false" style="display: block;">'
            + '<div class="modal-header">'
            + '<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>'
            + '<h3 id="myModalLabel">审核通过</h3>'
            + '</div>'
            + '<div class="modal-body">'
            + '<p>品牌信息已审核通过</p>'
            + '<p>3秒后自动跳转至品牌审核列表</p>'
            + '</div>'
            + '<div class="modal-footer">'
            + '<button class="btn" data-dismiss="modal" aria-hidden="true" onclick="close();">立即跳转</button>'
            + '</div>'
            + '</div>';
            var div1 = document.createElement("div");
            div1.innerHTML = html;
            return div1;
       }
       function close() {
           alert('a')
           var msg = $('#msg');
           msg[0].innerHTML = "";
       }
    </script>
</head>
<body>
    <div id="msg"></div>

    <a href="#pass" class="btn" data-toggle="modal" onclick="a();">通过审核</a><br />
    <a href="#fail" class="btn" data-toggle="modal">驳回</a><br />

    <div>
        <a class="btn btn-primary" role="button" href="#addImage" data-toggle="modal" onclick="createImageListAdd()"><i class="icon-plus icon-white"></i> 添加图文段落</a>
    </div>

    <div class="modal hide fade" id="addImage">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3 id="lblAddHead">添加套餐图文段落</h3>
        </div>
        @using (Html.BeginForm("SaveImage", "File2", FormMethod.Post,
        new
        {
            enctype = "multipart/form-data",
            id = "imgForm",
            name = "imgForm",
            target = "frmUploadImageTarget"
        }))
        {
            <div class="modal-body">
                <input name="tbAddUrl2" id="tbAddUrl2" type="hidden" value="">
                @Html.TextBox("tbAddTitle", "", new { @class = "input-block-level", @placeholder = "图文段落标题", @maxLength = 20 })
                <textarea class="input-block-level" name="tbAddNote" id="tbAddNote" cols="30" rows="10"></textarea>
                <input id="imageFile" name="imageFile" type="file" class="input-block-level">
                <p>图片尺寸: 宽640高400，格式为jpg、jpeg、png，小于 100KB</p>
                <input id="chkAddSort" name="chkAddSort" type="checkbox" style="float:left;"> <label for="chkAddSort" style="float:left;">图片加入轮播</label>
            </div>
            <div class="modal-footer">
                <a id="btnAddSubmit" href="#" class="btn btn-primary" onclick="addImageSave(); return false;">提交</a>
            </div>
        }
        <iframe id="frmUploadImageTarget" name="frmUploadImageTarget" onload="addImageSaveComplete();"
                style="position: absolute; left: -1000px; top: -1000px; display:none; "></iframe>
    </div>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>    
    <div id="pass" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="pass" aria-hidden="false" style="display: block;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 id="myModalLabel">审核通过</h3>
            </div>
            <div class="modal-body">
                <p>品牌信息已审核通过</p>
                <p>3秒后自动跳转至品牌审核列表</p>
            </div>
            <div class="modal-footer">
                <button class="btn" data-dismiss="modal" aria-hidden="true">立即跳转</button>
            </div>
        </div>

        <div id="fail" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="pass" aria-hidden="true" style="display: none;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 id="myModalLabel">审核驳回</h3>
            </div>
            <div class="modal-body">
                <p>a</p>
                <p>a</p>
            </div>
            <div class="modal-footer">
                <button class="btn" data-dismiss="modal" aria-hidden="true">立即跳转</button>
            </div>
        </div>
</body>
</html>
