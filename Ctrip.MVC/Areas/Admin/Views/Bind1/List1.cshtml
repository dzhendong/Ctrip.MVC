@using Ctrip.Model;
@model IList<Address>
@{
    ViewBag.Title = "Address";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List1</title>
</head>
<body>
    <h2>Addresses</h2>
    @if (Model.Count() == 0)
    {
        using (Html.BeginForm())
        {
            for (int i = 0; i < 2; i++)
            {
        <fieldset>
            <legend>Address @(i + 1)</legend>
            <div>
                <label>Province:</label>@Html.Editor("[" + i + "].Province")
            </div>
            <div>
                <label>District:</label>@Html.Editor("[" + i + "].District")
            </div>
            <div>
                <label>City:</label>@Html.Editor("[" + i + "].City")
            </div>
            <div>
                <label>Street:</label>@Html.Editor("[" + i + "].Street")
            </div>
        </fieldset>
            }
        <button type="submit">Submit</button>
        }
    }
    else
    {
        foreach (Address str in Model)
        {
        <p>@str.Province, @str.District, @str.City, @str.Street</p>
        }
        @Html.ActionLink("Back", "Address");
    }
</body>
</html>
